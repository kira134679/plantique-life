{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "assets": ["./src/assets"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
